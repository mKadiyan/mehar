<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.rsk.mehar.persistance.pojo">
	<class name="Cardential" table="CARDENTIAL">
		<meta attribute="class-description">
			This class contains the user cardentials details.
		</meta>

		<id name="email" column="email" type="string" />
		<property name="password" column="password" type="string"
			not-null="true" />
		<property name="lastChange" column="date_of_change" type="date" />
		<property name="expiryDate" column="date_of_expiry" type="date" />

	</class>
</hibernate-mapping>